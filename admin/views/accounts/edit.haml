#content_header.block
  %h1
    =pat(:edit)
    =mt(:account)
  %ul.actions
    %li.first=link_to 'Cancel', url(:accounts, :index)
#content_wrap.block
  .content
    :javascript
      $('document').ready(function() {
        $('#account').validate();
      });
    -form_for :account, url(:accounts, :update, :id => @account.id), :method => :put, :multipart => true, :id => :account, :class => 'form edit' do |f|
      =partial "accounts/form", :locals => { :f => f }

